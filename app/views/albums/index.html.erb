<div class="albums pure-g">

  <% @albums.each do |album| %>
  <div class="album pure-u-1-3">
    <a href="#" class="album_container">
      <div class="info">
        <span class="title"><%= album.title %></span>
        <span><%= album.artist %></span>
      </div>
      <%= image_tag(album.cover_url || "default_album.png", size: "256", class: "album_cover") %>
    </a>
  </div>
  <% end %>
</div>
